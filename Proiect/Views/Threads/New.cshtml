@model _12_dec_2022.Models.Thread


@{
    ViewBag.Title = "Adaugare Thread";
}


<h2>Adaugare Thread</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Threads", method: FormMethod.Post))
{

    @Html.Label("Content", "Continut thread")
    <br />

    @Html.TextBox("Content", null, new { @class = "form-control" })

    @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
    <br /><br />

     <label>Selectati categoria</label>
                @Html.DropDownListFor(m => m.IdCategory, new SelectList(Model.Categ, "Value", "Text"),
                "Selectati categoria", new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.IdCategory, null, new { @class = "text-danger" })
                <br /><br />

    <button class="btn btn-success" type="submit">Adauga thread</button>

}

